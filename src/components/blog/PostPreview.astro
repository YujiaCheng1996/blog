---
import type { CollectionEntry } from "astro:content";
import type { HTMLTag, Polymorphic } from "astro/types";
import FormattedDate from "../FormattedDate.astro";
import { getTitle, getDescription } from "@/utils";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
	post: CollectionEntry<"post">;
	withDesc?: boolean;
};

const { post, as: Tag = "div", withDesc = false } = Astro.props;
const postDate = post.data.updatedDate ?? post.data.publishDate;
---

<FormattedDate date={postDate} class="min-w-[120px] text-gray-500" />
<Tag>
	<a href={`/${post.collection}/${post.slug}/`} class="cactus-link" rel="prefetch">
		{post.data.title ?? getTitle(post.body)}
	</a>
</Tag>
{
	withDesc && (
		<q class="block italic line-clamp-3">{post.data.description ?? getDescription(post.body)}</q>
	)
}
